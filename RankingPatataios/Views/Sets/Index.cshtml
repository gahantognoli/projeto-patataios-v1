@model IEnumerable<RankingPatataios.Models.Set>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GamesGanhosJogador1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GamesGanhosJogador2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TieBreakJogador1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TieBreakJogador2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jogo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GamesGanhosJogador1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GamesGanhosJogador2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TieBreakJogador1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TieBreakJogador2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jogo.Codigo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
